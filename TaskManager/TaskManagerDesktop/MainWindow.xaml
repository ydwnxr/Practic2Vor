<Window x:Class="TaskManagerDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManagerDesktop"
        mc:Ignorable="d"
        Title="TaskManager - Управление задачами"
        Height="600"
        Width="900"
        MinHeight="400"
        MinWidth="600"
        WindowStartupLocation="CenterScreen">
    <DockPanel LastChildFill="True">
        
        <Menu DockPanel.Dock="Top" Background="#F0F0F0">

            <MenuItem Header="_Файл">
                <MenuItem Header="_Новая задача" />
                <Separator />
                <MenuItem Header="_Выход" Click="ExitMenuItem_Click" />
            </MenuItem>

            <MenuItem Header="_Задачи">
                <MenuItem Header="_Добавить" />
                <MenuItem Header="_Редактировать" />
                <MenuItem Header="_Удалить" />
                <Separator />
                <MenuItem Header="_Отметить как выполненную" />
            </MenuItem>

            <MenuItem Header="_Вид">
                <MenuItem Header="_Обновить" />
                <Separator />
                <CheckBox IsChecked="True" Content="Показывать выполненные" />
            </MenuItem>

            <MenuItem Header="_Справка">
                <MenuItem Header="_О программе" />
            </MenuItem>
        </Menu>
        
        <ToolBar DockPanel.Dock="Top">
            <Button ToolTip="Добавить новую задачу">
                <StackPanel Orientation="Horizontal">
                    <Image Source="S:\ИСП291\Voaa\TaskManager\TaskManagerDesktop\Resources\add.png" Width="16" Height="16" Margin="0,0,5,0" />
                    <TextBlock Text="Добавить"/>
                </StackPanel>
            </Button>
                
            <Button ToolTip="Удалить выбранную задачу">
                <StackPanel Orientation="Horizontal">
                    <Image Source="S:\ИСП291\Voaa\TaskManager\TaskManagerDesktop\Resources\delete.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Удалить"/>
                </StackPanel>
            </Button>

            <Separator />

            <Button ToolTip="Обновить список задач">
                <StackPanel Orientation="Horizontal">
                    <Image Source="S:\ИСП291\Voaa\TaskManager\TaskManagerDesktop\Resources\refresh.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Обновить"/>
                </StackPanel>
            </Button>
        </ToolBar>

        <StatusBar DockPanel.Dock="Bottom" Background="#F0F0F0">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готово" />
            </StatusBarItem>

            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Всего задач: " />
                    <TextBlock x:Name="TasksCountText" Text="0" FontWeight="Bold" Margin="0,0,10,0"/>

                    <TextBlock Text="Выполнено: " />
                    <TextBlock x:Name="CompletedCountText" Text="0" FontWeight="Bold" Margin="0,0,10,0"/>

                    <Separator Height="15" Margin="5,0"/>

                    <TextBlock x:Name="CurrentDateText" Text="" Margin="5,0"/>
                </StackPanel>
            </StatusBarItem>
            
        </StatusBar>
        
        <Grid>
            <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="20"
                   Foreground="Gray">
                   Рабочая область приложения
            </TextBlock>
        </Grid>
        
    </DockPanel>
</Window>
