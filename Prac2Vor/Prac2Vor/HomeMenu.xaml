<Page x:Class="prac2ivanovamelikyan2.HomeMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:prac2ivanovamelikyan2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomeMenu">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="75"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Text="Добро пожаловать!" FontSize="25" 
                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                   Grid.Row="0"></TextBlock>
        <Button Content="Назад" Grid.Row="1" Height="50" Width="100"
                HorizontalAlignment="Left" Margin="100,0,0,0"
                Name="BackButton" Click="BackButton_Click"></Button>
        <Button Content="Выйти" Grid.Row="1" Height="50" Width="100"
                HorizontalAlignment="Right" Margin="0,0,100,0"
                Name="ExitButton" Click="ExitButton_Click">
        </Button>
    </Grid>
</Page>
